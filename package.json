{
  "name": "ccpsdemographics-v2-nodejs",
  "version": "1.0.0",
  "description": "Serverless API to fetch data from a MongoDB Atlas collection",
  "main": "src/handler.js",
  "scripts": {
    "start": "serverless offline",
    "deploy": "serverless deploy",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest tests/unit --coverage"
  },
  "keywords": [
    "serverless"
  ],
  "author": "Thomas Liu",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.2",
    "mongodb": "^6.20.0",
    "serverless": "^4.19.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.3.2",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.1",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^13.3.3",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "forceExit": true,
    "detectOpenHandles": true,
    "setupFiles": [
      "dotenv/config"
    ],
    "collectCoverageFrom": [
      "src/*.js",
      "!src/*.test.js",
      "!src/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}